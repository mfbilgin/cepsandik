# ==========================================
# CepSandık Production Environment Variables
# ==========================================
# Bu dosyayı .env olarak kopyalayın ve değerleri doldurun

# ===== Database Configuration =====
DATABASE_URL=jdbc:postgresql://localhost:5432/userdb
DATABASE_USERNAME=postgres
DATABASE_PASSWORD=your_secure_password

COMMUNITY_DATABASE_URL=jdbc:postgresql://localhost:5432/communitydb
COMMUNITY_DATABASE_USERNAME=postgres
COMMUNITY_DATABASE_PASSWORD=your_secure_password

# ===== Redis =====
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# ===== RabbitMQ =====
RABBITMQ_HOST=localhost
RABBITMQ_PORT=5672
RABBITMQ_USERNAME=admin
RABBITMQ_PASSWORD=your_rabbitmq_password

# ===== JWT Secrets (minimum 64 characters) =====
JWT_SECRET=your_very_long_jwt_secret_at_least_64_characters_for_security_here
JWT_ACCESS_TTL=900
INTERNAL_JWT_SECRET=your_internal_jwt_secret_at_least_64_characters_here

# ===== AWS SES (Email) =====
MAIL_HOST=email-smtp.eu-central-1.amazonaws.com
MAIL_PORT=587
MAIL_USERNAME=your_ses_smtp_username
MAIL_PASSWORD=your_ses_smtp_password
EMAIL_FROM=info@cepsandik.com

# ===== AWS S3 =====
AWS_ACCESS_KEY=your_aws_access_key
AWS_SECRET_KEY=your_aws_secret_key
AWS_REGION=eu-central-1
AWS_S3_BUCKET=cepsandik-uploads

# ===== Frontend URL =====
FRONTEND_URL=https://cepsandik.com/api/v1
